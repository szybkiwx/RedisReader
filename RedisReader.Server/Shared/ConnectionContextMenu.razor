<ContextMenu Id="@MenuId">
    <Item OnClick="@Edit">Edit</Item>
    <Item OnClick="@Delete">Delete</Item>
</ContextMenu>

@code {

    [Parameter]
    public Guid ConnectionId { get; set; }
    
    [Parameter]
    public string MenuId { get; set; }
    
    [CascadingParameter]
    public IModalService Modal { get; set; }

    [Parameter]
    public EventCallback OnConnectionsChanged { get; set; }

    private Task Edit()
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(ConnectionId), ConnectionId);
        
        var form = Modal.Show<Connection>("Edit connection", parameters);
        return form.Result;
        
        Task.Run(async () =>
        {
            var form = Modal.Show<Connection>("Edit connection", parameters);
            var result = await form.Result;
            if (!result.Cancelled)
            {
                await OnConnectionsChanged.InvokeAsync();
            }
        });
    }

    private Task Delete()
    {
        return Task.CompletedTask;
    }
}