<ContextMenu Id="@MenuId">
    <Item OnClick="Edit">Edit</Item>
    <Item OnClick="@Delete">Delete</Item>
</ContextMenu>

@code {

    [Parameter]
    public Guid ConnectionId { get; set; }
    
    [Parameter]
    public string MenuId { get; set; }
    
    [CascadingParameter]
    public IModalService Modal { get; set; }

    [Parameter]
    public EventCallback<IModalReference> OnModalOpened { get; set; }

    private void Edit()
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(ConnectionId), ConnectionId);
        var form = Modal.Show<ConnectionForm>("Edit connection", parameters);
        OnModalOpened.InvokeAsync(form);
    }

    private Task Delete()
    {
        return Task.CompletedTask;
    }
}